<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">

            <!-- view background color -->
            <solid android:color="#B2E0FF" />
            
            <corners android:topLeftRadius="@dimen/feed_item_corner_radius" android:topRightRadius="@dimen/feed_item_corner_radius" />
        </shape></item>
    <item><shape android:shape="rectangle">

            <!-- view background color -->
            <gradient android:angle="90" android:centerColor="#fafafa" android:endColor="#f5f5f5" android:startColor="#f5f5f5" />

            <!-- view border color and width -->
            <stroke android:width="1dp" android:color="#dedede"></stroke>

            <corners android:topLeftRadius="@dimen/feed_item_corner_radius" android:topRightRadius="@dimen/feed_item_corner_radius" />
        </shape></item>

</selector>