<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true"><shape>
            <solid android:color="#0099ff" />

            <stroke android:width="3dp" android:color="#fff" />

            <corners android:bottomLeftRadius="45dp" android:topLeftRadius="45dp" android:topRightRadius="0dp" android:bottomRightRadius="0dp"/>

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape>
            <solid android:color="@android:color/transparent" />

            <stroke android:width="3dp" android:color="@color/ink" />

            <corners android:bottomLeftRadius="45dp" android:topLeftRadius="45dp" android:topRightRadius="0dp" android:bottomRightRadius="0dp"/>

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>