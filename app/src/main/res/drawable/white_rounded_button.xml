<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="#CCBADC" />

            <corners android:radius="@dimen/feed_item_corner_radius" />
        </shape></item>
    <item><shape android:shape="rectangle">

            <!-- view background color -->
            <gradient android:angle="90" android:centerColor="@android:color/white" android:endColor="#f5f5f5" android:startColor="@android:color/white" />

            <!-- view border color and width -->
            <stroke android:width="1dp" android:color="#e4e4e4"></stroke>

            <corners android:radius="@dimen/feed_item_corner_radius" />
        </shape></item>

</selector>